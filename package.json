{
  "name": "bavel",
  "description": "BabylonJS game framework with proper entity/component structure.",
  "authors": [
    "zimmed@zimmed.io"
  ],
  "version": "0.2.0",
  "license": "MIT",
  "repository": "github.com/zimmed/bavel",
  "main": "lib/index.js",
  "scripts": {
    "test-spec": "node ./node_modules/.bin/mocha --no-color --reporter markdown --require test/setup.js test/hooks.js 'test/**/*.spec.js' > build/test-spec.md",
    "test-results": "node ./node_modules/.bin/mocha --no-color --reporter json --require test/setup.js test/hooks.js 'test/**/*.spec.js' > build/test-results.json && node build/test-results.js",
    "test-save": "npm run test-spec && npm run test-results",
    "test-run": "node ./node_modules/.bin/mocha --require test/setup.js test/hooks.js 'test/**/*.spec.js'",
    "test": "npm run test-save && npm run test-run",
    "compile": "rm -rf ./lib && node ./node_modules/.bin/babel -d lib/ src/",
    "doc": "node ./node_modules/.bin/esdoc",
    "build": "npm run test-run && npm run test-save && npm run doc && npm run compile"
  },
  "graphicsLibs": [
    "babylonjs"
  ],
  "dependencies": {
    "babylonjs": "^2.5.0",
    "lodash.foreach": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.isempty": "^4.4.0",
    "lodash.isnumber": "^3.0.3",
    "lodash.isobject": "^3.0.2",
    "lodash.isplainobject": "^4.0.6",
    "lodash.mapvalues": "^4.6.0",
    "lodash.merge": "^4.6.1",
    "lodash.noop": "^3.0.1",
    "lodash.omit": "^4.5.0",
    "lodash.pickby": "^4.6.0",
    "lodash.take": "^4.1.1",
    "lodash.values": "^4.3.0",
    "lodash.zipobject": "^4.1.3",
    "moment": "^2.20.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-module-resolver": "^3.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-node8": "^1.2.0",
    "chai": "^4.1.2",
    "esdoc": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "mocha": "^5.0.4",
    "mock-require": "^3.0.1",
    "sinon": "^4.4.6",
    "sinon-chai": "^3.0.0",
    "babel-polyfill": "^6.26.0"
  }
}
