{
  "name": "bavel",
  "description": "BabylonJS game framework with proper entity/component structure.",
  "authors": [
    "zimmed@zimmed.io"
  ],
  "version": "0.1.4",
  "license": "MIT",
  "repository": "github.com/zimmed/bavel",
  "main": "lib/index.js",
  "scripts": {
    "test-save": "node ./node_modules/.bin/mocha -R json-stream --require babel-core/register 'test/**/*.spec.js' > test-results.json",
    "test-run": "node ./node_modules/.bin/mocha --require babel-core/register 'test/**/*.spec.js'",
    "test": "npm run test-save && npm run test-run",
    "compile": "rm -rf ./lib && node ./node_modules/.bin/babel -d lib/ src/"
  },
  "graphicsLibs": [
    "babylonjs"
  ],
  "dependencies": {
    "babylonjs": "^2.5.0",
    "bluebird": "^3.4.7",
    "lodash": "^4.17.4",
    "reduce-promise": "latest",
    "basic-static": "latest",
    "basic-singleton": "latest"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.22.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-async-to-bluebird": "^1.1.0",
    "babel-preset-es2015": "^6.22.0",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "proxyquire": "^1.7.11",
    "sinon": "^1.17.7"
  }
}
